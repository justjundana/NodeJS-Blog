<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Simple Blog</title>
    <link rel="stylesheet" href="css/style.css">
    <link href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet">
</head>

<body>
    <header>
        <%- include('header'); %>
    </header>
    <main>
        <div class="container mx-auto">
            <div class="flex flex-wrap p-5">
                <% articles.forEach((article)=> { %>
                    <div class="md:w-1/2 px-3 mb-6 w-full">
                        <div class="flex w-full h-full flex-wrap overflow-hidden rounded">
                            <div class="w-2/6">
                                <img class="object-cover h-full w-full"
                                    src="https://ui-avatars.com/api/?name=<%= article.title %>" />
                            </div>
                            <div class="w-4/6 p-5">
                                <h2 class="leading-normal text-lg">
                                    <%= article.title %>
                                </h2>
                                <div class="flex flex-wrap justify-between items-center mt-6">
                                    <div class="inline-flex items-center">
                                        <div class="w-10 h-10 rounded-full overflow-hidden flex-shrink-0">
                                            <img src="https://ui-avatars.com/api/?name=Jundana Al-Basyir" />
                                        </div>
                                        <div class="flex-1 pl-2">
                                            <h2 class="mb-1">Jundana Al-Basyir</h2>
                                            <p class="opacity-50 text-xs">May 18</p>
                                        </div>
                                    </div>
                                    <% if (locals.isLoggedIn) { %>
                                        <div class="flex space-x-2">
                                            <a href="/edit/<%= article.id %>">
                                                <span class="opacity-50 cursor-pointer">
                                                    <img class="h-4 w-4" src="data:image/svg+xml;base64," />
                                                </span>
                                            </a>
                                            <a href="/delete/<%= article.id %>">
                                                <span class="opacity-50 cursor-pointer">
                                                    <img class="h-4 w-4" src="data:image/svg+xml;base64," />
                                                </span>
                                            </a>
                                        </div>
                                    <% } %>
                                </div>
                                <a href="/article/<%= article.id %>">
                                    <button
                                        class="mt-4 border border-gray-600 text-gray-600 text-xs px-2 py-1 rounded-full hover:bg-gray-600 hover:text-white">
                                        Read More
                                    </button>
                                </a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </main>
    <footer>

    </footer>
</body>

</html>